{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "public", ".cache"],
  "include": ["src"]
}
